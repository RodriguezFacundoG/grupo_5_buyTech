<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BuyTech</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet"/>
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/styleIndex.css">
    <link rel="stylesheet" href="/css/styleHeader.css">
    <link href="/css/LineamientosGenerales.css" rel="stylesheet" type="text/CSS">
    <link href="/css/styleFooter.css" rel="stylesheet" type="text/css">
    <!-- Linkear Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">

</head>
<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') %>

    <main>
        <section class="slider">
            <article class="slider__toleft">
                <button class="fas fa-chevron-left">
            </article>
            <article class="slider__category">
                <a href="/types/celulares">
                    <img src="/images/productos/Types/cels.jpg" alt="Cels">
                </a>
                <p>Celulares</p>
            </article>
            <article class="slider__category">
                <a href="/types/tablets">
                    <img src="/images/productos/Types/tablets.jpeg" alt="Tablets">
                </a>
                <p>Tablets</p>
            </article>
            <article class="slider__category">
                <a href="/types/laptops">
                    <img src="/images/productos/Types/laptops2.webp" alt="Laptops">
                </a>    
                <p>Laptops</p>
            </article>
            <article class="slider__category"> 
                <a href="/types/Accesories">
                    <img src="/images/productos/Types/accesories.jpeg" alt="Accesories">
                </a>
                <p>Accesories</p>
            </article>
            <article class="slider__toright">
                <button class="fas fa-chevron-right">
            </article>            
        </section>

        <div class="container">
                <section class="the-latest main-sections">
                    <h3 class="main-sections__title">The latest</h3>
                    <% products.forEach(element =>  {  %>
                        <% if (element.latest == true) { %>
                            <a href="/products/<%=element.id%>">
                                <article class="product the-latest__product">
                                    <img src="/images/productos/<%= element.img %>" alt="" class="product__img">
                                    <p class="product__name"><%= element.name %> </p>            
                                </article>
                            </a>
                        <%}%>
                    <%})%>
                </section>
            
                <section class="special-discounts main-sections">
                    <h3 class="main-sections__title">Special Discounts</h3>
                    <% products.forEach(element =>  {  %> 
                        <% if (element.discount != 0) { %>   
                            <a href="/products/<%=element.id%>">
                                <article class="product special-discounts__product">
                                    <img src="/images/productos/<%= element.img %>" alt="" class="product__img">
                                    <p class="product__name"><%=element.name %></p>             
                                </article>
                            </a>
                        <%}%>
                    <%})%>
                </section>
        
                <section class="top-sales main-sections">
                    <h3 class="main-sections__title">Top Sales</h3>
                    <% products.forEach(element =>  {  %>     
                        <% if (element.top == true) { %>     
                            <a href="/products/<%=element.id%>">
                                <article class="product top-sales__product">
                                    <img src="/images/productos/<%= element.img %>" alt="" class="product__img">
                                    <p class="product__name"><%=element.name %></p>  
                                </article>
                            </a> 
                        <%}%>
                    <%})%>
                </section>
        </div>
        
    </main>   
<!-- FOOTER  -->
    <%- include('./partials/footer.ejs') %>
    
</body>

</html>