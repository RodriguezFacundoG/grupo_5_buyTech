<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>

     <!-- javaSCRIPTS -->    
     <script src="/js/loginValidation.js" type="text/javascript"></script>

    <!-- Linkear el CSS -->
    <link href="/css/styleHeader.css" rel="stylesheet" type="text/css">
    <link href="/css/user.css" rel="stylesheet" type="text/css">
    <link href="/css/styleFooter.css" rel="stylesheet" type="text/css">
    <!-- Linkear Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300&display=swap" rel="stylesheet">

    <!-- Linkear íconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

</head>

<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') %>

        <main>
            <div class="sign-in-container">
                <div class="sign-in-title">
                    <p class="sign-in">Sign In</p>
                    
                    <% if(locals.isLogged == false){ %>
                        <div>
                            <p class="wish-to-buy">
                                Deseas comprar? Logéate y comienza la experiencia BuyTech!
                            </p>
                        </div>
                    <% }%>
                </div>


                <form action="/user/login" method="POST" class="form-complete">

                    <div class="form-box">
                        <label for="email"></label>
                        <input type="text" placeholder="E-mail" id="email" name="email" value ="<%= locals.old && old.email  ? old.email : null %>">
                        <% if(locals.errors && errors.email){ %>
                            <span class="text-danger">
                                <%= errors.email.msg %>
                            </span>
                        <% } %>
                    </div>

                    <div class="form-box">
                        <label for="password"></label>
                        <input type="password" placeholder="Password" id="password" name="password">
                        <% if(locals.errors && errors.password){ %>
                            <span class="text-danger">
                                <%= errors.password.msg %>
                            </span>
                        <% } %>
                    </div>
                    
                    <div>
                        <label class="form-checkbox">
                            <input type="checkbox" name="remember_me"> Recordarme
                        </label>
                    </div>
                    
                    <div class="no-pass">
                        <a href="/user/register">Not registered?</a>
                    </div>

                    <div class="form-button">
                        <button type="submit">Log In</button>
                    </div>


                </form>
            </div>
            <div class="no-user">
                <a href="/user/register">Do not have User ID? Register</a>
            </div>
            </div>
        </main>

        <!-- FOOTER -->
        <%- include('./partials/footer.ejs') %>
</body>

</html>