<header class="header">

    <!-- Burger menu -->
    <nav class="header__burger-menu">
        <i class="fas fa-bars"></i>
    </nav>
    
    <!-- Imagen -->
    <div class="header__img-container">
        <a href="/"><img src="/images/LogoBuyTech.png" alt="LOGO" class="header__img"></a>
    </div>

    <!--Barrra de busqueda  -->
