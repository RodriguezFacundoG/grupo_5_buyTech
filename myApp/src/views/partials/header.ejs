<header class="header">
<div class="top">
    <!-- Icon menu -->
    <div class="icon-menu">
        <i class="fas fa-bars"></i>
    </div>

    <!-- Logo -->
    <div class="logo-container">
        <a class="logo" href="/">
            <img src="/images/LogoBuyTech.png" alt="LOGO" class="header__img">
        </a>
    </div>
    

    <!-- Search bar -->
    <form action="/products/search" method="GET" class="search-bar">
        <input type="text" name="keywords" placeholder="Search products">
        <button type="submit"><i class="fas fa-search"></i></button>
    </form>

    <!-- Nav de user y cart -->
    <div class="icons">
        <a href="/user/login">           
            <% if(locals.isLogged == false){ %>
                <i class="fas fa-user"></i>
                <span class="nav-personal__text">User</span>
                
            <% } else { %>
                <img src="images/userAvatars/<%= locals.userLogged.avatar %>" alt="No carga avatar">
                <span class="nav-personal__text"><%= locals.userLogged.firstName %></span>
            <% } %>
        </a>

        <a class="icon-cart" href="/user/cart">  
            <i class="fas fa-shopping-cart"></i>
        </a>

    </div>

       
</div>
    
</header>