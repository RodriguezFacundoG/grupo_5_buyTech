<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product_Edit</title>

        <!-- Linkear el CSS -->
        <link href="/css/styleProductCreate.css" rel="stylesheet" type="text/css">
        <link href="/css/styleFooter.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="/css/styleHeader.css">
        <!-- Linkear Google Font -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>    
        <link href="https://fonts.googleapis.com/css2?family=Fira+Sans:wght@300&family=Roboto&display=swap" rel="stylesheet">
    
        <!-- Linkear Ã­conos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    
</head>
<body>
    <!-- HEADER -->
    <%- include('./partials/header.ejs') %>

    <main>
        <div class="product_create_container">
            <div class="create_title_main">
                <h1 class="form_title">Editing product: <%= element.id %></h1>
            </div>
            <div class="create_requests">
                <form class="create_form" action="/products/<%= element.id %>?__metod=PUT" method="POST"></form>
                    <div class="create_title_required">
                        <p class="form_required">Required *</p>
                    </div>
                    <div class="form_product_name">
                        <label for="create_form_product_name">Product Name *</label>
                        <input class="form_text" type="text" name="product_name" value="<%= element.name %>" id="create_form_product_name" maxlength="35">
                    </div>
                    <div class="form_product_description">
                            <label for="create_form_product_description">Description *</label>
                            <input class="form_text" type="text" name="product_description" value="<%= element.description %>" id="create_form_product_description" maxlength="65">
                    </div>
                    <div class="form_product_image">
                            <label for="create_form_product_image">Image *</label>
                            <input class="form_attachement" type="file" name="product_image" value="" id="create_form_product_image" accept="image/png, image/jpeg">
                    </div>
                    <div class="form_product_category">
                            <label for="create_form_product_category">Category *</label>                    
                            <select class="form_select" name="product_category" id="create_form_product_category">
                                <option value disabled selected hidden>Select:</option>
                                <% categories.forEach(category => { %>                               
                                    <option value="<%=category.id%>" <%= element.product_category.id == category.id ? "selected" : "" %> ><%=category.type.charAt(0).toUpperCase() + category.type.slice(1)%></option>
                                <% }) %>                                
                            </select>
                    </div>
                    <div class="form_product_color">
                        <label for="create_form_product_color">Color</label>
                        <input class="form_text" type="text" name="product_color" value="<%= element.color ? element.color : ""  %>" id="create_form_product_color" maxlength="15">
                    </div>
                    <div class="form_product_weight">
                        <label for="create_form_product_weight">Weight *</label>                        
                        <input class="form_number" type="number" name="product_weight" value="<%= element.weight ? element.weight : ""  %>" id="create_form_product_weight" maxlength="3">
                    </div>
                    <div class="form_product_size">
                        <label for="create_form_product_size">Size *</label>
                        <input class="form_text" type="text" name="product_size" value="<%= element.size ? element.size : ""  %>" id="create_form_product_size" maxlength="35">
                    </div>
                    <div class="form_product_price">
                        <label for="create_form_product_price">Price *</label>
                        <input class="form_number" type="number" name="product_price" value="<%= element.price %>" id="create_form_product_price" maxlength="7">
                    </div>
                    <div class="form_product_discount">
                        <label for="create_form_product_discount">Discount *</label>
                        <input class="form_number" type="number" name="product_discount" value="<%= element.discount %>" id="create_form_product_discount" maxlength="7">
                    </div>
                    <div class="form-button">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <!-- FOOTER -->
    <%- include('./partials/footer.ejs') %>
    
</body>
</html>